<!DOCTYPE html>
<html>
  <head>
    <title>Mantra - <%= yield(:title).blank? ? "translating community" : yield(:title) %></title>
    <%= stylesheet_link_tag 'compiled/default.css' %>
    <%= stylesheet_link_tag 'compiled/authorizations.css' %>
    <%= stylesheet_link_tag 'compiled/devise.css' %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
    <%= stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection' %>
    <!--[if lt IE 8]>
    <%= stylesheet_link_tag 'compiled/print.css', :media => 'print' %>
    <![endif]-->
    <!--[if lt IE 7]>
    <%= stylesheet_link_tag 'compiled/ie6.css', :media => 'screen, projection' %>
    <![endif]-->
    <%= stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection' %>
  </head>
  <body>
    <div id="root">
      <% flash.each do |key, value| %>
        <div id="flash" class="<%= key %> round"><%= value %></div>
        <div class="clear"></div>
      <% end %>
      <div id="notices">
        <%# render @notices %>
      </div>
      <div id="container" class="round">
        <div id="user_nav">
          <% if user_signed_in? %>
            <%= t('message.signed_in_as',:id=>current_user.email) %> Not you? <%= link_to t(:sign_out), destroy_user_session_path %>.
          <% else %>
          <div id="authorizations">
            <a href="/auth/twitter" class="auth_provider">
              <h5>Log in with Twitter</h5>
              <div>twitter</div> 
            </a>
<!--
            <a href="/auth/open_id" class="auth_provider">
              <h5>Connect with OpenID</h5>
              <div>OpenID</div> 
            </a>
-->
            <center>Or <%= link_to d(:sign_in), new_user_session_path %> with email</center>
          </div>
          <% end %>
        </div>

          <% unless @page.nil? %>
          <div id="links_top">
            <%= link_to @manga.title, @manga %>
          </div>
          <div id="top">
            <%= yield(:top) %>
          </div>
          <div class="clear"></div>
          <% end %>
          <% unless yield(:title).blank? %>
            <h1 id="title"><%= yield(:title) %></h1>
          <% end %>
          <%= yield %>
      </div>
    </div>
  </body>
</html>
