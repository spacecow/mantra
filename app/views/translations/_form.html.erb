<%= simple_form_for [@manga,@page,@translation] do |f| %>
  <%= f.input :japanese %>
  <%= f.input :english, :error_html => { :id => "english_error"} %>
  <%= f.input :x1, :as => :hidden %>
  <%= f.input :y1, :as => :hidden %>
  <%= f.input :x2, :as => :hidden %>
  <%= f.input :y2, :as => :hidden %>
  <%= f.submit :class => "change" %>
  <%= f.submit t(:cancel), :class => "cancel" unless @translation.new_record? %>
<% end %>
